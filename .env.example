# DEGIRO Trading Agent Configuration Example
# Copy this file to .env and fill in your actual values

# DEGIRO Credentials (KEEP THESE SECURE!)
DEGIRO_USERNAME=your_degiro_username@example.com
DEGIRO_PASSWORD=your_secure_password_here
# Extract this from QR code during 2FA setup (base32 encoded string)
# Example format: ABCDEFGHIJKLMNOPQRSTUVWXYZ234567
DEGIRO_TOTP_SECRET=

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/degiro_trading
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# API Rate Limiting
DEGIRO_API_RATE_LIMIT=60  # requests per minute
MARKET_DATA_RATE_LIMIT=120  # requests per minute

# Trading Configuration
MAX_DAILY_TRADES=10
MAX_POSITION_SIZE=10000  # in EUR
DEFAULT_STOP_LOSS_PERCENT=5
DEFAULT_TAKE_PROFIT_PERCENT=10

# Notification Settings
NOTIFICATION_EMAIL=your_email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM_NUMBER=+1234567890
SMS_TO_NUMBER=+1234567890

# Risk Management
MAX_PORTFOLIO_RISK_PERCENT=20
MAX_SINGLE_POSITION_PERCENT=10
ENABLE_EMERGENCY_STOP=true

# Market Data Provider
MARKET_DATA_PROVIDER=yfinance  # yfinance, alpha_vantage
ALPHA_VANTAGE_API_KEY=your_api_key_if_using

# Web Dashboard
WEB_HOST=0.0.0.0
WEB_PORT=8000
SECRET_KEY=your_secret_key_for_sessions
ENABLE_WEB_INTERFACE=true

# Backup Configuration
ENABLE_BACKUPS=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./data/backups